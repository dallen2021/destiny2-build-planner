# Server Configuration
NODE_ENV=production
PORT=3000

# Client URL (your frontend domain)
CLIENT_URL=https://your-domain.com

# MongoDB Connection (for session storage)
MONGODB_URI=mongodb://localhost:27017/d2-builder

# Session Configuration
SESSION_SECRET=your-very-long-random-session-secret-here

# Bungie API Configuration
BUNGIE_API_KEY=your-bungie-api-key
BUNGIE_CLIENT_ID=your-oauth-client-id
BUNGIE_CLIENT_SECRET=your-oauth-client-secret

# OAuth Configuration
OAUTH_REDIRECT_URI=https://your-domain.com/auth/callback

# Admin Configuration
ADMIN_API_KEY=your-admin-api-key-for-manual-updates

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=https://your-domain.com,http://localhost:3000

# SSL/TLS Configuration (if using HTTPS directly)
# SSL_KEY_PATH=/path/to/privkey.pem
# SSL_CERT_PATH=/path/to/fullchain.pem

# Redis Configuration (optional, for distributed sessions)
# REDIS_URL=redis://localhost:6379

# Logging Level
LOG_LEVEL=info

# Manifest Update Schedule (cron format)
# Default: every 6 hours
MANIFEST_UPDATE_SCHEDULE=0 */6 * * *